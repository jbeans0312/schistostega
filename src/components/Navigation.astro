---
import '../styles/global.css'
---
<style>
    div {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        margin-top: 0px;
        padding-top: 1px;
    }
    p {
        margin-left: 10px;
        margin-right: 10px;
    }
    h1  {font-size: 4vw;
        font-family: "Black Record";
        margin-top:0;
        margin-bottom:0;
    }  
    /* Medium screens */
    @media (max-width: 1024px) {h1{font-size: 4vw;}}
    /* Small screens */
    @media (max-width: 768px) {h1{font-size: 6vw;}}
    /* Very small screens */
    @media (max-width: 520px) {h1{font-size: 8vw;}}
</style>
<div id="navbar">
    <p>blog</p>
    <p>adventures</p>
    <p>contact</p>
</div>