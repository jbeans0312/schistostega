---
import '../styles/global.css';
import '@fontsource/montserrat'
---
<style>
    div{
    border-style: solid;
    border-color: var(--text-color);
    padding: 10px;
    padding-top: 2px;
    border-width: 2px;
    margin-left: 18em;
    margin-right: 18em;
    margin-top: 0px;
    }

    /* Medium screens */
    @media (max-width: 1024px) {
    div {
        margin-left: 5em;
        margin-right: 5em;
    }
    }

    /* Small screens */
    @media (max-width: 768px) {
    div {
        margin-left: 1.5em;
        margin-right: 1.5em;
    }
    }

    /* Very small screens */
    @media (max-width: 520px) {
    div {
        margin-left: 0.2em;
        margin-right: 0.2em;
    }
    }
</style>
<div id="content-wrapper">
    <slot />
</div>