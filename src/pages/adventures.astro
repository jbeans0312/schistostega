---
import '../styles/global.css'
import Head from '../components/Head.astro';
import Headline from "../components/Headline.astro";
import ContentWrapper from "../components/ContentWrapper.astro";
import SmallNavigation from '../components/SmallNavigation.astro';
import { getCollection } from 'astro:content'

const posts = (await getCollection('adventures')).sort((a,b) => a.data.date.valueOf() - b.data.date.valueOf());
---
<style>
	h1 {
		margin-bottom: 5px;
		margin-top:0px;
	}
</style>
<html lang="en">
<Head title="adventures"></Head>
	<body>
		<Headline title={"ADVENTURES"}></Headline>
		<SmallNavigation page="adventures" showBack={false} showHome showBlog showContact></SmallNavigation>
        <ContentWrapper>
			{ posts.length > 0 ?
				posts.map(post => (
					<div id={post.id}>
						<h1><a href={`/blog/${post.id}`}>{post.data.title}</a></h1>
						<strong>{post.data.date.toLocaleDateString()}</strong>
					</div>
				)) : <p>soon</p>
			}
        </ContentWrapper>
	</body>
</html>